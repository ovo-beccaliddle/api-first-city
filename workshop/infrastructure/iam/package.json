{
  "name": "@city-services/iam",
  "version": "1.0.0",
  "description": "Identity and Access Management service for city services",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node ../../scripts/load-env.js node dist/server.js",
    "dev": "node ../../scripts/load-env.js tsx --watch src/server.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf dist"
  },
  "packageManager": "yarn@4.7.0",
  "dependencies": {
    "@city-services/common": "../../common",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "rimraf": "^4.4.1",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
